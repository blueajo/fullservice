<!DOCTYPE html>
<html{{ html_attributes }}>
  <head>
    {# Drupal placeholders for early-head assets #}
    <head-placeholder token="{{ placeholder_token }}">
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">

    {# Inject your custom title manually from your metadata node #}
    {% if global_meta_title %}
      <title>{{ global_meta_title|escape }}</title>
    {% else %}
      <title>{{ site_name|escape }}</title>
    {% endif %}

    {# Keep Drupal core/head stuff, but optional if you want #}
    {{ head }}

    {# Custom meta description #}
    {% if global_meta_description %}
      <meta name="description" content="{{ global_meta_description|escape }}">
      <meta property="og:description" content="{{ global_meta_description|escape }}">
    {% endif %}

    {# Custom OG/Twitter image #}
    {% if global_meta_image_url %}
      <meta property="og:image" content="{{ global_meta_image_url }}">
      <meta name="twitter:image" content="{{ global_meta_image_url }}">
    {% endif %}

    {# JSON-LD structured data #}
    {% if global_json_ld %}
      <script type="application/ld+json">
        {{ global_json_ld|raw }}
      </script>
    {% endif %}
  </head>

  <body{{ attributes }}>
    {{ page_top }}
    {{ page }}
    {{ page_bottom }}

    {# Bottom JS placeholder #}
    <js-bottom-placeholder token="{{ placeholder_token }}">
  </body>
</html>